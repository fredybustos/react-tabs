{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "types": [
      "jest",
      "node"
    ],
    "jsx": "react",
    "declaration": true,
    "declarationDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src",
    "__tests__",
    "style-injector.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
